<p id="notice"><%= notice %></p>

<h1>Participants</h1>

<table>
  <thead>
    <tr>
      <th>Self Generated ID</th>
      <th>RDS ID</th>
      <th>Study ID</th>
      <th>Code</th>
      <th>Referrer Code</th>
      <th>SGM Group</th>
      <th>Referrer SGM Group</th>
    </tr>
  </thead>

  <tbody>
    <% @participants.each do |participant| %>
      <tr>
        <td><%= participant.self_generated_id %></td>
        <td><%= participant.rds_id %></td>
        <td><%= participant.study_id %></td>
        <td><%= participant.code %></td>
        <td><%= participant.referrer_code %></td>
        <td><%= participant.sgm_group %></td>
        <td><%= participant.referrer_sgm_group %></td>
        <td><%= link_to 'Show', participant_survey_responses_path(participant.id) %></td>
        <td><%= link_to 'Edit', edit_participant_path(participant) %></td>
        <td><%= link_to 'Destroy', participant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

